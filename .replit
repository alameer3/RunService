modules = ["web", "python-3.11", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["chromium", "docker", "firefox", "firefox-esr", "freetype", "git", "iana-etc", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "lxterminal", "netcat-openbsd", "nginx", "openbox", "openjpeg", "openssl", "postgresql", "redis", "tcl", "tigervnc", "tk", "x11vnc", "xorg.xvfb", "xterm", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VNC Desktop Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VNC Web Interface"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "VNC Desktop Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "VNC Web Interface"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 web_interface.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 8080

[[ports]]
localPort = 5902
externalPort = 3001

[[ports]]
localPort = 5903
externalPort = 3002

[[ports]]
localPort = 6080
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]
