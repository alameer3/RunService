modules = ["nodejs-20", "bash", "web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["docker", "firefox", "openbox", "x11vnc", "xorg.xvfb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VNC Desktop Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VNC Web Interface"

[[workflows.workflow]]
name = "VNC Desktop Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "VNC Web Interface"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 web_interface.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6080
externalPort = 3000
